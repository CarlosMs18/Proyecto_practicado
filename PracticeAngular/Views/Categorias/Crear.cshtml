@model Categoria;

@{
    ViewData["Title"] = "Crear Categoria";
}

<h1 class="display-4">Crear Categoria</h1>

<p>La categoria nos permite indicar en que gastamos nuestro dinero, tambien, de donde provienen nuestros ingresos.</p>


<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form asp-action="Crear">
    <div class="mt-3">
        <label asp-for="Nombre"  class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>


    <div class="mt-3">
        <label asp-for="TipoOperacionId" class="form-label"></label>
        <select asp-for="TipoOperacionId" asp-items="Html.GetEnumSelectList<TipoOperacionEnum>()" class="form-select"></select>
        <span asp-validation-for="TipoOperacionId" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <button class="btn btn-primary">Crear</button>
        <a class="btn btn-danger">Cancelar</a>
    </div>
</form>